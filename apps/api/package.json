{
  "name": "api",
  "license": "MIT",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/index",
    "dev:pretty": "pnpm run dev | pino-pretty",
    "start": "node dist/index",
    "clean": "rm -rf dist",
    "build": "pnpm -s run clean && pnpm -s run generate && tsc",
    "generate": "pnpm -s run generate:prisma",
    "generate:prisma": "prisma generate",
    "db:push": "prisma db push --preview-feature",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "test": "jest"
  },
  "dependencies": {
    "@envelop/graphql-jit": "4.4.2",
    "@fastify/env": "4.1.0",
    "@fastify/helmet": "9.1.0",
    "@graphql-yoga/node": "2.13.6",
    "@pothos/core": "3.13.0",
    "@pothos/plugin-errors": "3.6.0",
    "@pothos/plugin-prisma": "3.21.2",
    "@pothos/plugin-scope-auth": "3.11.2",
    "@pothos/plugin-validation": "3.5.1",
    "@prisma/client": "4.2.1",
    "dotenv": "16.0.1",
    "fastify": "4.4.0",
    "fastify-plugin": "4.1.0",
    "graphql": "16.5.0",
    "graphql-scalars": "1.18.0",
    "tozod": "3.0.0",
    "zod": "3.18.0",
    "zod-to-json-schema": "3.17.1"
  },
  "devDependencies": {
    "@types/jest": "28.1.6",
    "@types/node": "18.7.1",
    "eslint": "8.21.0",
    "jest": "28.1.3",
    "prisma": "4.2.1",
    "ts-jest": "28.0.7",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "tsconfig": "workspace:*",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": "18.6.0"
  }
}
