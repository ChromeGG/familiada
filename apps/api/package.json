{
  "name": "api",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChromeGG/familiada.git",
    "directory": "apps/api"
  },
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "pnpm -s run clean && pnpm -s run generate && tsc",
    "clean": "rm -rf dist",
    "db:push": "prisma db push --preview-feature",
    "dev": "nodemon --watch './**/*.ts' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/index.ts | pino-pretty",
    "generate": "pnpm -s run generate:prisma",
    "generate:prisma": "prisma generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev && prisma generate && pnpm migrate:test:dev",
    "migrate:test:dev": "dotenv -e .env.test -- pnpm prisma db push",
    "start": "node --experimental-specifier-resolution=node --loader ts-node/esm dist/src",
    "test": "NODE_OPTIONS=--experimental-vm-modules pnpm jest --runInBand 2>&1",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@envelop/core": "2.6.0",
    "@envelop/graphql-jit": "4.6.0",
    "@fastify/cors": "8.2.1",
    "@fastify/env": "4.1.0",
    "@fastify/helmet": "10.0.1",
    "@pothos/core": "3.29.0",
    "@pothos/plugin-complexity": "3.12.0",
    "@pothos/plugin-errors": "3.11.0",
    "@pothos/plugin-prisma": "3.47.1",
    "@pothos/plugin-scope-auth": "3.19.0",
    "@pothos/plugin-validation": "3.9.0",
    "@prisma/client": "4.12.0",
    "dotenv": "16.0.3",
    "dotenv-cli": "6.0.0",
    "fastify": "4.7.0",
    "fastify-plugin": "4.2.1",
    "graphql": "16.6.0",
    "graphql-scalars": "1.21.3",
    "graphql-yoga": "3.8.0",
    "remove-accents": "0.4.4",
    "tozod": "3.0.0",
    "zod": "3.21.4",
    "zod-to-json-schema": "3.20.4"
  },
  "devDependencies": {
    "@faker-js/faker": "7.6.0",
    "@jest/globals": "29.5.0",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.0",
    "eslint": "8.25.0",
    "jest": "29.5.0",
    "nodemon": "2.0.22",
    "pino-pretty": "10.0.0",
    "prisma": "4.13.0",
    "ts-jest": "29.1.0",
    "ts-node": "10.9.1",
    "tsconfig": "workspace:*",
    "type-fest": "3.8.0",
    "typescript": "5.0.4"
  },
  "prisma": {
    "seed": "ts-node --experimental-specifier-resolution=node --esm prisma/seed.ts"
  }
}
