{
  "name": "api",
  "license": "MIT",
  "type": "module",
  "repository": "https://github.com/ChromeGG/familiada",
  "scripts": {
    "build": "pnpm -s run clean && pnpm -s run generate && tsc",
    "clean": "rm -rf dist",
    "db:push": "prisma db push --preview-feature",
    "dev": "nodemon --watch './**/*.ts' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/index.ts",
    "dev:pretty": "pnpm run dev | pino-pretty",
    "generate": "pnpm -s run generate:prisma",
    "generate:prisma": "prisma generate",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev && prisma generate",
    "migrate:reset": "prisma migrate reset",
    "migrate:test:dev": "dotenv -e .env.test -- pnpm prisma db push",
    "start": "node dist/index",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest 2>&1"
  },
  "dependencies": {
    "@envelop/core": "2.5.0",
    "@envelop/graphql-jit": "4.4.2",
    "@fastify/env": "4.1.0",
    "@fastify/helmet": "9.1.0",
    "@graphql-yoga/node": "2.13.12",
    "@pothos/core": "3.13.0",
    "@pothos/plugin-complexity": "3.9.1",
    "@pothos/plugin-errors": "3.6.0",
    "@pothos/plugin-prisma": "3.21.2",
    "@pothos/plugin-scope-auth": "3.11.2",
    "@pothos/plugin-validation": "3.5.1",
    "@prisma/client": "4.2.1",
    "dotenv": "16.0.1",
    "fastify": "4.4.0",
    "fastify-plugin": "4.1.0",
    "graphql": "16.5.0",
    "graphql-scalars": "1.18.0",
    "tozod": "3.0.0",
    "zod": "3.18.0",
    "zod-to-json-schema": "3.17.1"
  },
  "devDependencies": {
    "@faker-js/faker": "7.4.0",
    "@types/jest": "28.1.8",
    "@types/node": "18.7.13",
    "eslint": "8.21.0",
    "jest": "29.0.0",
    "nodemon": "2.0.19",
    "prisma": "4.2.1",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.1",
    "tsconfig": "workspace:*",
    "type-fest": "2.18.1",
    "typescript": "4.7.4"
  },
  "prisma": {
    "seed": "ts-node --esm prisma/seed.ts"
  }
}
