{
  "name": "api",
  "repository": "https://github.com/ChromeGG/familiada",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "pnpm -s run clean && pnpm -s run generate && tsc",
    "clean": "rm -rf dist",
    "db:push": "prisma db push --preview-feature",
    "dev": "nodemon --watch './**/*.ts' --exec 'node --experimental-specifier-resolution=node --loader ts-node/esm' src/index.ts | pino-pretty",
    "generate": "pnpm -s run generate:prisma",
    "generate:prisma": "prisma generate",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev && prisma generate",
    "migrate:reset": "prisma migrate reset",
    "migrate:test:dev": "dotenv -e .env.test -- pnpm prisma db push",
    "start": "node dist/index",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest 2>&1",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@envelop/core": "2.6.0",
    "@envelop/graphql-jit": "4.6.0",
    "@fastify/env": "4.1.0",
    "@fastify/helmet": "10.0.0",
    "@graphql-yoga/node": "2.13.12",
    "@pothos/core": "3.20.0",
    "@pothos/plugin-complexity": "3.10.0",
    "@pothos/plugin-errors": "3.7.0",
    "@pothos/plugin-prisma": "3.32.0",
    "@pothos/plugin-scope-auth": "3.13.0",
    "@pothos/plugin-smart-subscriptions": "3.6.4",
    "@pothos/plugin-validation": "3.7.0",
    "@prisma/client": "4.3.1",
    "dotenv": "16.0.2",
    "fastify": "4.5.3",
    "fastify-plugin": "4.2.1",
    "graphql": "16.5.0",
    "graphql-scalars": "1.18.0",
    "tozod": "3.0.0",
    "zod": "3.18.0",
    "zod-to-json-schema": "3.17.1"
  },
  "devDependencies": {
    "@faker-js/faker": "7.5.0",
    "@types/jest": "29.0.0",
    "@types/node": "18.7.14",
    "eslint": "8.23.0",
    "jest": "29.0.2",
    "nodemon": "2.0.19",
    "pino-pretty": "9.1.0",
    "prisma": "4.3.1",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.1",
    "tsconfig": "workspace:*",
    "type-fest": "2.19.0",
    "typescript": "4.8.2"
  },
  "prisma": {
    "seed": "ts-node --esm prisma/seed.ts"
  }
}
