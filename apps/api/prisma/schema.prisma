generator client {
  provider = "prisma-client-js"
}

generator nexusPrisma {
  provider = "nexus-prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TeamColor {
  RED
  BLUE
}

model User {
  id     BigInt @id @default(autoincrement())
  name   String
  team   Team   @relation(fields: [id], references: [id])
  teamId BigInt
}

model Team {
  id               BigInt    @id @default(autoincrement())
  teamColor        TeamColor
  User             User[]
  Game             Game      @relation(fields: [gameId], references: [id])
  gameId           String
  answearingUserId BigInt?
  score            Int
}

model Game {
  id             String           @id @unique
  status         GameStaus        @default(LOBBY)
  team           Team[]
  rounds         Int
  currentRound   Int
  currentScore   Int
  GamesQuestions GamesQuestions[]
}

enum GameStaus {
  LOBBY
  RUNNING
  FINISHED
}

model GamesQuestions {
  question   Question @relation(fields: [questionId], references: [id])
  questionId BigInt
  Game       Game     @relation(fields: [gameId], references: [id])
  gameId     String

  @@id([gameId, questionId])
}

model Question {
  id             BigInt           @id @default(autoincrement())
  text           String
  GamesQuestions GamesQuestions[]
}

model Answer {
  id       BigInt    @id @default(autoincrement())
  label    String
  points   Int
  variants Variant[]
}

model Variant {
  id       BigInt @id @default(autoincrement())
  text     String
  answer   Answer @relation(fields: [answerId], references: [id])
  answerId BigInt @unique
}
